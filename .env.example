NEXTAUTH_URL=http://localhost:3000
# Producción: https://tu-dominio.vercel.app

AUTH_SECRET=replace_with_secure_random
# Generar con: openssl rand -base64 32

AUTH_GOOGLE_ID=replace_with_google_client_id
AUTH_GOOGLE_SECRET=replace_with_google_client_secret
# Obtener en Google Cloud Console → APIs & Services → Credentials
# Tipo: OAuth Client ID (Web)
# Redirect URI: /api/auth/callback/google

DATABASE_URL=postgresql://user:password@ep-neon.neon.tech/dbname?sslmode=require
# Obtener en Neon.tech → Connection String

YOUTUBE_API_KEY=replace_with_youtube_api_key
# Google Cloud Console → YouTube Data API v3 → Credentials → API Key

WEATHER_API_KEY=replace_with_openweather_api_key
# OpenWeather → API Keys (opcional; sin clave se usa fallback Open‑Meteo)

GIPHY_API_KEY=replace_with_giphy_api_key
# Giphy Developers → Create App → API Key
